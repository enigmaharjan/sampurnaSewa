<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_person"
            android:layout_centerHorizontal="true"
            android:elevation="1dp" />

        <!--    full name    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Full Name"
            android:textColor="@color/blackTextColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvUName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border_radius_etext_unfill"
            android:fontFamily="@font/normal"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="textCapWords"
            android:hint="@string/firstname_lastname"
            android:includeFontPadding="false"
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Username"
            android:textColor="@color/blackTextColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvUuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border_radius_etext_unfill"
            android:fontFamily="@font/normal"
            android:hint="username"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:focusable="true" />

        <!--    email    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Email"
            android:textColor="@color/blackTextColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvUEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border_radius_etext_unfill"
            android:fontFamily="@font/normal"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email"
            android:includeFontPadding="false"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Address"
            android:textColor="@color/blackTextColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvUAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border_radius_etext_unfill"
            android:fontFamily="@font/normal"
            android:inputType="text"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Address"
            android:includeFontPadding="false"
            android:maxLines="1" />

        <!--    contact    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/normal"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:text="Phone No"
            android:textColor="@color/blackTextColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvUphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border_radius_etext_unfill"
            android:fontFamily="@font/normal"
            android:inputType="number"
            android:hint="98********"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:maxLines="1" />
        <RelativeLayout
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

        <TextView
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_button_fill"
            android:elevation="3dp"
            android:fontFamily="@font/normal"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Click to edit profile"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>


