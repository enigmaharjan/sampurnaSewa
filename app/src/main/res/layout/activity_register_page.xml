<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:textStyle="bold"
                android:text="Fill up the details"
                android:includeFontPadding="false"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:textSize="19sp"
                android:textColor="@color/blackTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:text="@string/all_fields_with_are_mandatory"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorLightGrey" />

            <!--    profile image    -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_person"
                android:layout_centerHorizontal="true"
                android:elevation="1dp" />

            <!--    full name    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_full_name"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regfullnamelog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textCapWords"
                android:hint="@string/firstname_lastname"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    Username    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_username"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regusernamelog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:hint="username"
                android:includeFontPadding="false"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:focusable="true" />

            <!--    email    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_email"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regemaillog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textEmailAddress"
                android:hint="@string/hint_email"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    password    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_password"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regpasswordlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    confirm password    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_confirm_password"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regconfpasswordlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textPassword"
                android:hint="@string/re_enter_password"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    address    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_address"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regaddresslog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="text"
                android:hint="@string/hint_address"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    contact    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@string/form_contact"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/regphonenolog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="number"
                android:hint="98********"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <RelativeLayout
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/sign_up_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/shape_button_fill"
                    android:elevation="3dp"
                    android:fontFamily="@font/normal"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progress_bar_add_emp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:indeterminate="true"
                    android:progressDrawable="@drawable/custom_progress_bar"
                    android:theme="@style/AppTheme.WhiteAccent"
                    android:visibility="invisible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorLightGrey"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
