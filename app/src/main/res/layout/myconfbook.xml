<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@color/colorBackground">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvjobName"
        style="@style/textStyle"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000AFF"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imgProfile"
        android:hint="Job Type"/>

    <LinearLayout
        android:id="@+id/lindec"
        style="@style/textStyle"
        android:maxLines="2"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/tvjobName"
        android:layout_below="@+id/tvjobName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="Date:   " />

        <TextView
            android:id="@+id/tvjdate"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:hint="Date" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linprice"
        style="@style/textStyle"
        android:maxLines="2"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/lindec"
        android:layout_below="@+id/lindec">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="Time:  " />

        <TextView
            android:id="@+id/tvjtime"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/tvjName"
            android:layout_below="@+id/lindec"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Time" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linprob"
        style="@style/textStyle"
        android:maxLines="2"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/lindec"
        android:layout_below="@+id/linprice">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="Problem:" />
        <TextView
            android:id="@+id/tvjprob"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/tvjprob"
            android:layout_below="@+id/linprob"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Problem" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/lindec"
        android:layout_below="@+id/linprob">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="Status:" />
        <TextView
            android:id="@+id/tvjstatus"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/tvjprob"
            android:layout_below="@+id/linprob"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Status" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvj"
        style="@style/textStyle"
        android:textSize="5sp"
        android:hint="Status"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:id="@+id/btnfeedback"
        android:text="Any Feedback? Click here"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:visibility="invisible">
    </TextView>

    </RelativeLayout>
</android.support.v7.widget.CardView>
