<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/tvjName"
            style="@style/textStyle"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000AFF"
            android:layout_alignTop="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Job name"/>

        <TextView
            android:id="@+id/tvjdesc"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/tvjName"
            android:layout_below="@+id/tvjName"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Job detail" />

        <TextView
            android:id="@+id/tvjprice"
            style="@style/textStyle"
            android:maxLines="2"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/tvjName"
            android:layout_below="@+id/tvjdesc"
            android:layout_toEndOf="@+id/imgProfile"
            android:hint="Charge" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tvjprice"
        android:layout_alignLeft="@+id/imgProfile"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>