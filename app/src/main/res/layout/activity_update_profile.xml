<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:textStyle="bold"
                android:text="Profile update"
                android:includeFontPadding="false"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:textSize="19sp"
                android:textColor="@color/blackTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:text="Edit fields to update profile"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorLightGrey" />

            <!--    profile image    -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_person"
                android:layout_centerHorizontal="true"
                android:elevation="1dp" />

            <!--    full name    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Full Name"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textCapWords"
                android:hint="@string/firstname_lastname"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    Username    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Username"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:hint="username"
                android:includeFontPadding="false"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:focusable="true" />

            <!--    email    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Email"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textEmailAddress"
                android:hint="@string/hint_email"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    password    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Password"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    address    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Address"
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="text"
                android:hint="@string/hint_address"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <!--    contact    -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Phone No."
                android:textColor="@color/blackTextColor"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/uptphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:inputType="number"
                android:hint="98********"
                android:includeFontPadding="false"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnedit"
                    android:background="@drawable/shape_button_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp" />

                <Button
                    android:id="@+id/btncancel"
                    android:background="@drawable/shape_button_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
