<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Update"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bk"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Date"
                android:textColor="@color/blackTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uptdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:hint="Click to select Date"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Time"
                android:textColor="@color/blackTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/upttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:focusable="true"
                android:fontFamily="@font/normal"
                android:hint="Click to select time"
                android:includeFontPadding="false"
                android:inputType="textCapCharacters"
                android:textColor="#000"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="Problem"
                android:textSize="20sp"
                android:textColor="@color/blackTextColor" />

            <EditText
                android:id="@+id/uptproblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_radius_etext_unfill"
                android:fontFamily="@font/normal"
                android:hint="Your Problem"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:maxLines="2" />

            <TextView
                android:id="@+id/uptbook"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@drawable/shape_button_fill"
                android:elevation="3dp"
                android:fontFamily="@font/normal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Update Book !"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>